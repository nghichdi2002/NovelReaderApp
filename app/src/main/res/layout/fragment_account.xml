<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_adapter.AccountFragment">

    <ImageView
        android:id="@+id/iv_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_menu"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="8dp" />

    <!-- Ảnh đại diện tròn -->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avatar"
        android:layout_below="@id/iv_settings"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"/>

    <!-- Tên người dùng -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/iv_profile"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_username"
        android:layout_marginTop="8dp"
        android:background="@color/dividerColor" />

    <!-- Email người dùng -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/textColorSecondary"
        android:layout_below="@id/tv_username"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_email"
        android:layout_marginTop="8dp"
        android:background="@color/dividerColor" />



    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_email"
        android:layout_marginTop="8dp"
        android:background="@color/dividerColor" />

    <!-- Nút truyện yêu thích -->
    <Button
        android:id="@+id/btn_favorite_stories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Truyện yêu thích"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_below="@id/tv_email"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/btn_reading_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Lịch sử đọc"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_below="@id/btn_favorite_stories"
        android:layout_marginTop="20dp" />

</RelativeLayout>