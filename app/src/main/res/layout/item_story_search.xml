<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Image Cover -->
        <ImageView
            android:id="@+id/imageViewCover"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <!-- Title -->
        <TextView
            android:id="@+id/txt_story_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/imageViewCover"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Title"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_story_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewCover"
            android:layout_below="@id/txt_story_title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:text="Tác giả"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/txt_story_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewCover"
            android:layout_below="@id/txt_story_author"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:text="Thể loại"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
